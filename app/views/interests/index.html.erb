<div class="page-header">
  <h1>Interests</h1>
</div>

<p><a href="/interests/new" class="btn btn-primary">Add a New Interest</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Genre</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.user_id %></td>
        <td><%= interest.genre_id %></td>
        <td>
          <a href="/interests/<%= interest.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/interests/<%= interest.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_interest/<%= interest.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

