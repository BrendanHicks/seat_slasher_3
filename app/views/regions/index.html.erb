<div class="page-header">
  <h1>Regions</h1>
</div>

<p><a href="/regions/new" class="btn btn-primary">Add a New Region</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Region name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td>
          <a href="/regions/<%= region.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/regions/<%= region.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_region/<%= region.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

