<div class="page-header">
  <h1>Add Region</h1>
</div>

<% if @region.errors.any? %>
  <% @region.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_region" class="form-horizontal">
  <!-- Label and input for region_name -->
  <div class="form-group">
    <label for="region_name" class="col-sm-2 control-label">
      Region name
    </label>
    <div class="col-sm-10">
      <input type="text" id="region_name" name="region_name" placeholder="Region name" class="form-control" value="<%= @region.region_name %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Region" class="btn btn-primary">
    </div>
  </div>
</form>
