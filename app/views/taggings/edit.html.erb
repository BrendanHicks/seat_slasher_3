<div class="page-header">
  <h1>Edit Tagging #<%= @tagging.id %></h1>
</div>

<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_tagging/<%= @tagging.id %>" class="form-horizontal">
  <!-- Label and input for genre_id -->
  <div class="form-group">
    <label for="genre_id" class="col-sm-2 control-label">
      Genre
    </label>
    <div class="col-sm-10">
      <input type="text" id="genre_id" name="genre_id" placeholder="Genre" class="form-control" value="<%= @tagging.genre_id %>">
    </div>
  </div>

  <!-- Label and input for event_id -->
  <div class="form-group">
    <label for="event_id" class="col-sm-2 control-label">
      Event
    </label>
    <div class="col-sm-10">
      <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @tagging.event_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Tagging" class="btn btn-primary">
    </div>
  </div>
</form>
